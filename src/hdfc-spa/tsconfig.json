{
  "compileOnSave": false,
  "compilerOptions": {
    // "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": ["es2018", "dom"],
    "baseUrl": "src",
    "paths": {
      "core/*": ["app/core/*"],
      "shared/*": ["app/shared/*"],
      "auth/*": ["app/features/auth/*"],
      "settings/*": ["app/features/settings/*"]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
